// vim: set ts=2 sw=2 ft=devicetree:

#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/bt.h>

// Layers: Default, Symbol, Navigation, Number, Function
#define DEF 0
#define SYM 1
#define NAV 2
#define NUM 3
#define FUN 4

// some easy key equivalency
#define XXX &none
#define ___ &trans

// Now import if any extra external layers needed
#include "combos.dtsi"
#include "morph.dtsi"
#include "behaviors.dtsi"

#ifdef THREE_THUMBS
#  define TL_DEF &mt LGUI TAB
#  define TR_DEF &mt RALT DEL
#  define T_XXX &none
#else
#  define TL_DEF
#  define TR_DEF
#  define T_XXX
#endif

// Home row mods macro
// GUI -> ALT -> CTRL -> SHFT    |    SHFT -> CTRL -> ALT -> GUI
#define HRML(k1,k2,k3,k4) &ht LGUI  k1 &ht LALT  k2 &ht LCTRL k3 &ht LSHFT k4
#define HRMR(k1,k2,k3,k4) &ht RSHFT k1 &ht RCTRL k2 &ht RALT  k3 &ht RGUI  k4

#define BT_PROFILES &bt BT_SEL 0  &bt BT_SEL 1 &bt BT_SEL 2 &bt BT_SEL 3 &bt BT_SEL 4

/ {
    conditional_layers {
        compatible = "zmk,conditional-layers";
        function_layer {
            if-layers = <SYM NAV>;
            then-layer = <FUN>;
        };
    };

    keymap {
        compatible = "zmk,keymap";
        default_layer {
            display-name = "DEF";
            bindings = <
        //╭──────────┬──────────┬──────────┬──────────┬──────────╮   ╭──────────┬──────────┬──────────┬──────────┬──────────╮
            &kp Q      &kp W      &kp F      &kp P      &kp B          &kp J      &kp L      &kp U      &kp Y      &kp SQT
        //├──────────┼──────────┼──────────┼──────────┼──────────┤   ├──────────┼──────────┼──────────┼──────────┼──────────┤
            HRML(A,        R,         S,         T)     &kp G          &kp M      HRMR(N,        E,         I,        O)
        //├──────────┼──────────┼──────────┼──────────┼──────────┤   ├──────────┼──────────┼──────────┼──────────┼──────────┤
            &kp Z      &kp X      &kp C      &kp D      &kp V          &kp K      &kp H      &comma_morph  &dot_morph &kp FSLH
        //╰──────────┴──────────┴──────────┼──────────┼──────────┤   ├──────────┼──────────┼──────────┴──────────┴──────────╯
                                  TL_DEF    &lt NAV ESC &lt NUM SPACE  &kp ENTER  &lt SYM BSPC TR_DEF
        //                      ╰──────────┴──────────┴──────────╯   ╰──────────┴──────────┴──────────╯
            >;
        };

        symbol_layer {
            display-name = "SYM";
            bindings = <
        //╭──────────┬──────────┬──────────┬──────────┬──────────╮   ╭──────────┬──────────┬──────────┬──────────┬──────────╮
            &kp EXCL   &kp AT     &kp HASH   &kp DLLR   &kp PRCNT      &kp CARET  &kp AMPS  &kp ASTRK   &kp LPAR   &kp RPAR
        //├──────────┼──────────┼──────────┼──────────┼──────────┤   ├──────────┼──────────┼──────────┼──────────┼──────────┤
            &kp TILDE  &kp GRAVE  &kp LBRC   &kp LBKT   &kp LT         &kp GT     &kp RBKT   &kp RBRC   ___        &kp SEMI
        //├──────────┼──────────┼──────────┼──────────┼──────────┤   ├──────────┼──────────┼──────────┼──────────┼──────────┤
           &caps_word  &kp N7     &kp N8     &kp N9     &kp UNDER      &kp UNDER  &kp MINUS  ___        ___        ___   
        //╰──────────┴──────────┴──────────┼──────────┼──────────┤   ├──────────┼──────────┼──────────┴──────────┴──────────╯
                                  T_XXX      ___        &kp ESC        ___        ___        T_XXX
        //                      ╰──────────┴──────────┴──────────╯   ╰──────────┴──────────┴──────────╯
            >;
        };

        navigation_layer {
            display-name = "NAV";
            bindings = <
        //╭──────────┬──────────┬──────────┬──────────┬──────────╮   ╭──────────┬──────────┬──────────┬──────────┬──────────╮
            ___        &kp LBKT   &kp LBRC   &kp RBRC   ___            &kp PG_UP  ___        ___        ___        ___
        //├──────────┼──────────┼──────────┼──────────┼──────────┤   ├──────────┼──────────┼──────────┼──────────┼──────────┤
            &kp EXCL   &kp AT     &kp HASH   &kp DLLR   &kp PRCNT      &kp LEFT   &kp DOWN   &kp UP     &kp RIGHT  &kp GRAVE
        //├──────────┼──────────┼──────────┼──────────┼──────────┤   ├──────────┼──────────┼──────────┼──────────┼──────────┤
            ___        ___        ___        ___        ___            &kp PG_DN  &kp UNDER  &kp PLUS   &kp PIPE   ___   
        //╰──────────┴──────────┴──────────┼──────────┼──────────┤   ├──────────┼──────────┼──────────┴──────────┴──────────╯
                                  T_XXX      ___        ___            ___        ___        T_XXX
        //                      ╰──────────┴──────────┴──────────╯   ╰──────────┴──────────┴──────────╯
            >;
        };
      
        number_layer {
            display-name = "NUM";
            bindings = <
        //╭──────────┬──────────┬──────────┬──────────┬──────────╮   ╭──────────┬──────────┬──────────┬──────────┬──────────╮
            &kp INS    &kp N1     &kp N2     &kp N3     ___            &kp HOME   &kp N7     &kp N8     &kp N9     &kp COLON
        //├──────────┼──────────┼──────────┼──────────┼──────────┤   ├──────────┼──────────┼──────────┼──────────┼──────────┤
            &kp DEL    &kp N4     &kp N5     &kp N6     ___            &kp N0     &kp N4     &kp N5     &kp N6     &kp SEMI
        //├──────────┼──────────┼──────────┼──────────┼──────────┤   ├──────────┼──────────┼──────────┼──────────┼──────────┤
           &caps_word  &kp N7     &kp N8     &kp N9     &kp N0         ___        &kp N1     &kp N2     &kp N3     ___   
        //╰──────────┴──────────┴──────────┼──────────┼──────────┤   ├──────────┼──────────┼──────────┴──────────┴──────────╯
                                  T_XXX      ___        &kp ESC        ___        ___        T_XXX
        //                      ╰──────────┴──────────┴──────────╯   ╰──────────┴──────────┴──────────╯
            >;
        };

        function_layer {
            display-name = "FUN";
            bindings = <
        //╭──────────┬──────────┬──────────┬──────────┬──────────╮   ╭──────────┬──────────┬──────────┬──────────┬──────────╮
                                   BT_PROFILES                         ___        ___        ___        ___        ___   
        //├──────────┼──────────┼──────────┼──────────┼──────────┤   ├──────────┼──────────┼──────────┼──────────┼──────────┤
           ___         ___         ___        ___       &bootloader   &bootloader ___        ___        ___        ___
        //├──────────┼──────────┼──────────┼──────────┼──────────┤   ├──────────┼──────────┼──────────┼──────────┼──────────┤
            ___        ___        &bt BT_CLR ___        &sys_reset     &sys_reset ___        ___        ___        ___   
        //╰──────────┴──────────┴──────────┼──────────┼──────────┤   ├──────────┼──────────┼──────────┴──────────┴──────────╯
                                  T_XXX      ___        ___            ___        ___        T_XXX
        //                      ╰──────────┴──────────┴──────────╯   ╰──────────┴──────────┴──────────╯
            >;
        };
    };
};
