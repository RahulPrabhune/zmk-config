

#define MAKE_MACROS(NAME, BINDING) \
    / { \
        macros { \
            compatible = "zmk,behavior-macro"; \
            macro_ ## NAME { \
                label = #NAME; \
                bindings = BINDING; \
            }; \
        }; \
    };

MAKE_MACROS(cmdkcmd, <&macro_press &kp LGUI> <&macro_tap &kp K> <&macro_release &kp LGUI> <&macro_tap &sk LGUI>)