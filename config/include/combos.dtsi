#define COMBO_HOOK require-prior-idle-ms = <150>;

#define MAKE_COMBO(NAME, BINDING, POS, LAYERS) \
    / { \
        combos { \
            compatible = "zmk,combos"; \
            combo_ ## NAME { \
                timeout-ms = <40>; \
                bindings = <BINDING>; \
                key-positions = <POS>; \
                layers = <LAYERS>; \
                COMBO_HOOK \
            }; \
        }; \
    }; 

MAKE_COMBO(bspc, &kp BSPC, 6  7,  DEF)
MAKE_COMBO(pipe, &kp PIPE, 18 19, DEF)
